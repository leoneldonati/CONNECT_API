{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    },
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
